{
  "manifest_version": 3,
  "name": "Magpie AI",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "http://localhost/"
  ],
  "content_security_policy": ["script-src 'self' 'unsafe-eval' https://cdn.jsdelivr.net; object-src 'self'"],
}



